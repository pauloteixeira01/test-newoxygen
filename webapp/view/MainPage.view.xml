<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="my.app.controller.MainPage"
  xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
>
  <Shell>
    <App id="app">
      <Page title="Meu Projeto">
        <FlexBox  justifyContent="SpaceBetween" direction="Column">
          <FlexBox
            class="sapUiSmallMarginTop"
            alignItems="Center"
            justifyContent="Center"
            direction="Column"
          >
            <Text text="OlÃ¡ Mundo" />

            <FlexBox
              width="80%"
              alignItems="Center"
              justifyContent="SpaceBetween"           
            >
              <Button
                icon="sap-icon://sap-ui5"
                text="Show toast"
                press=".onPress"
                type="Emphasized"
                class="sapUiSmallMargin"
              />
              <Button id="employeeListBtn" text="Navigation here" press=".onNavToSecondPage" class="sapUiTinyMarginEnd" />           
            </FlexBox>
          </FlexBox>
          
          <Table id="idProductsTable"
            inset="false"
            items="{/products}"
          >
            <infoToolbar>
              <OverflowToolbar>
                <Label text="Table From JSON"/>
              </OverflowToolbar>
            </infoToolbar>
            <columns>
              <Column
                width="100%">
                <Text text="Products" />
              </Column>
            </columns>
            <items>
              <ColumnListItem vAlign="Middle">
                <cells>
                  <ObjectIdentifier
                    title="{Name}"
                    text="{}"/>
                  <Text text="{}" />               
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </FlexBox> 
      </Page>
    </App>
  </Shell>
</mvc:View>